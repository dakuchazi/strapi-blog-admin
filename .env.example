# 服务器配置
HOST=0.0.0.0
PORT=1337
APP_KEYS=toBeModified1,toBeModified2

# 管理员配置
ADMIN_JWT_SECRET=toBeModified  # 使用 openssl rand -base64 32 生成
API_TOKEN_SALT=toBeModified    # 使用 openssl rand -base64 32 生成
TRANSFER_TOKEN_SALT=toBeModified  # 使用 openssl rand -base64 32 生成

# Feature Flags
FLAG_NPS=true
FLAG_PROMOTE_EE=true

# 数据库配置
DATABASE_CLIENT=sqlite  # 可选值: sqlite, mysql, postgres

# MySQL/PostgreSQL 配置 (如果使用 MySQL/PostgreSQL，取消注释并配置以下值)
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_NAME=strapi
# DATABASE_USERNAME=strapi
# DATABASE_PASSWORD=your-password
# DATABASE_SSL=false

# 数据库连接池配置
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_CONNECTION_TIMEOUT=60000

# SQLite 配置 (如果使用 SQLite)
DATABASE_FILENAME=.tmp/data.db

# SSL 配置（如果需要，取消注释并配置）
# DATABASE_SSL_KEY=
# DATABASE_SSL_CERT=
# DATABASE_SSL_CA=
# DATABASE_SSL_CAPATH=
# DATABASE_SSL_CIPHER=
# DATABASE_SSL_REJECT_UNAUTHORIZED=true